<form autocomplete="off">
    <p class="notes">{{localize "MCT.settings.hint"}}</p>
    
    <ol class="tab-list">
        {{#each tabs}}
        <li class="tab-item" data-tab-id="{{this.id}}" data-is-default="{{this.isDefault}}">
            <div class="mct-tab-row">
                {{#if this.isDefault}}
                <i class="fa-solid fa-thumbtack default-tab-icon" title="{{localize 'MCT.settings.tooltips.defaultTab'}}"></i>
                {{else}}
                <i class="fa-solid fa-bars drag-handle"></i>
                {{/if}}
                <span class="tab-label {{#if this.isWhisperTab}}mct-whisper-tab-label{{/if}}">{{this.label}}</span>
                <a class="edit-tab" title="{{localize 'MCT.settings.tooltips.edit'}}"><i class="fa-solid fa-cog"></i></a>
                {{#unless this.isDefault}}
                <a class="delete-tab" title="{{localize 'MCT.settings.tooltips.delete'}}"><i class="fa-solid fa-trash"></i></a>
                {{else}}
                <div class="button-spacer"></div>
                {{/unless}}
            </div>
        </li>
        {{/each}}
    </ol>
    
    <div class="form-group-stacked">
        <button type="button" class="add-tab">
            <i class="fa-solid fa-plus"></i> {{localize "MCT.settings.buttons.add"}}
        </button>
    </div>
    <div class="form-group"> 
        <button type="button" class="reset-settings" title="{{localize 'MCT.Settings.tooltips.reset'}}">
            <i class="fa-solid fa-undo"></i> {{localize "MCT.settings.buttons.reset"}}
        </button>
    </div>
</form>