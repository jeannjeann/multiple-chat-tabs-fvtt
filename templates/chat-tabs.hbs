{{#if tabs}}
<div class="mct-container">
    <button class="scroll-btn left" style="display: none;"><i class="fas fa-chevron-left"></i></button>
    <div class="mct-scroller">
        <nav class="multiple-chat-tabs-nav tabs">
            {{#each tabs}}
            <a class="item" data-filter="{{this.id}}">{{this.label}}</a>
            {{/each}}
        </nav>
    </div>
    <button class="scroll-btn right" style="display: none;"><i class="fas fa-chevron-right"></i></button>
    <button class="add-tab-btn" title="{{localize 'MCT.AddTab.Title'}}"><i class="fas fa-plus"></i></button>
</div>
{{/if}}